@model Otzar_Hasfarim.ViewModel.SetVM

<h1>AddSet</h1>

<h4>SetVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="LibraryId" class="control-label">Book set name</label>
                <input asp-for="LibraryId" class="form-control" />
                <span asp-validation-for="LibraryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SetModel.Name" class="control-label">Book set name</label>
                <input asp-for="SetModel.Name" class="form-control" />
                <span asp-validation-for="SetModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Name" class="control-label">Book name</label>
                <input asp-for="Book.Name" class="form-control" />
                <span asp-validation-for="Book.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Height" class="control-label"></label>
                <input asp-for="Book.Height" class="form-control" />
                <span asp-validation-for="Book.Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Width" class="control-label"></label>
                <input asp-for="Book.Width" class="form-control" />
                <span asp-validation-for="Book.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                @Html.ActionLink("Add more books", "AddMoreToSet", new { setVM = Model })
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

